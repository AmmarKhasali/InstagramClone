<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_pp"
        android:layout_width="@dimen/size_pp"
        android:layout_height="@dimen/size_pp"
        app:srcCompat="@drawable/ic_profile"
        android:contentDescription="@string/todo" />


    <TextView
        android:id="@+id/txt_username"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_pp"
        android:text="@string/app_name"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_marginTop="@dimen/margin_btnmore"
        app:srcCompat="@drawable/ic_more_horiz"
        android:contentDescription="@string/app_name" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_psot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_post"
        android:layout_below="@id/parent_up"
        android:src="@drawable/fotobaru"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/parent_below"
        android:layout_below="@id/img_psot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            app:srcCompat="@drawable/ic_favorite"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/btn_comment"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            app:srcCompat="@drawable/ic_comment"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            app:srcCompat="@drawable/ic_share"
            android:contentDescription="@string/app_name" />


    </LinearLayout>

    <ImageView
        android:id="@+id/btn_fav"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_psot"
        app:srcCompat="@drawable/ic_bookmark"
        android:contentDescription="@string/app_name"/>


    <TextView
        android:id="@+id/username_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent_below"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/objek_jarak"
        android:layout_marginStart="@dimen/objek_jarak"
        android:textSize="@dimen/captin_Size"
        android:layout_marginLeft="@dimen/objek_jarak" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/username_cap"
        android:layout_below="@+id/parent_below"
        android:text="@string/kata_am"
        android:layout_marginTop="@dimen/objek_jarak"
        android:layout_marginStart="@dimen/objek_jarak"
        android:textSize="@dimen/captin_Size"
        android:layout_marginLeft="@dimen/objek_jarak"
        android:layout_toEndOf="@id/username_cap" />

</RelativeLayout>